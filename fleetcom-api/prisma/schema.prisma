generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum UserRole {
  USER
  ADMIN
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String    @unique
  password   String
  avatarUrl  String?
  role       UserRole  @default(USER)

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?

  reservations Reservation[]

  @@index([email])
}

enum VehicleStatus {
  AVAILABLE
  RESERVED
}

model Vehicle {
  id             String        @id @default(uuid())
  name           String
  year           String
  type           String
  engine         String
  size           String
  imageUrl       String?

  status         VehicleStatus @default(AVAILABLE)

  reservedBy     String?
  reservedFrom   DateTime?
  reservedUntil  DateTime?

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  deletedAt      DateTime?

  reservations   Reservation[]

  @@index([status])
  @@index([type])
  @@index([engine])
  @@index([size])
}

model Reservation {
  id            String    @id @default(uuid())

  userId        String
  vehicleId     String

  reservedFrom  DateTime
  reservedUntil DateTime

  cancelled     Boolean   @default(false)
  returnedAt    DateTime?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user          User      @relation(fields: [userId], references: [id])
  vehicle       Vehicle   @relation(fields: [vehicleId], references: [id])

  @@index([userId])
  @@index([vehicleId])
  @@index([reservedFrom, reservedUntil])
}

